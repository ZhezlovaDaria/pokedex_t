<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pokemon"
            type="com.example.pocedex.data.Pokemon" />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:id="@+id/dialoglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/roundeddialoge"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pokname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_marginBottom="@dimen/margin"
            android:gravity="center"
            android:text="@{pokemon.getName()}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_big_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />


            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ab"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/rounded"
                    android:padding="@dimen/rounder_padding"
                    android:text="Stats"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_mid_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/rounded"
                    android:orientation="vertical"
                    android:padding="@dimen/rounder_padding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ab">


                    <TextView
                        android:id="@+id/hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"HP "+ pokemon.getStats(0)+ " | Special-Attack "+pokemon.getStats(3)}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/attack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"Attack "+ pokemon.getStats(1)+ " | Special-Defense "+pokemon.getStats(4)}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/defense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"Defense "+ pokemon.getStats(2)+ " | Speed "+pokemon.getStats(5)}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"Order " +String.valueOf(pokemon.order)+" | Base exp " +String.valueOf(pokemon.base_experience)}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"Weight " +String.valueOf(pokemon.weight)+" | Height " +String.valueOf(pokemon.height)}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/forms"
                        android:background="@drawable/rounded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/margin"
                        android:padding="@dimen/rounder_padding"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text='@{"Forms: "+ pokemon.getFormsString()}'
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/rounded"
                    android:gravity="center"
                    android:padding="@dimen/rounder_padding"
                    android:singleLine="true"
                    android:text='@{"Species:"+ pokemon.getSpecies()}'
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_mid_size" />

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/rounded"
                    android:orientation="vertical"
                    android:padding="@dimen/rounder_padding" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Moves"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_mid_size" />

                    <TextView
                        android:id="@+id/mvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{pokemon.getMovesString()}' />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Abilities"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_mid_size" />

                    <TextView
                        android:id="@+id/abs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{pokemon.getAbilityString()}' />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Held items"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_mid_size" />

                    <TextView
                        android:id="@+id/his"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{pokemon.getHeldItemsString()}' />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Game indices"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_mid_size" />

                    <TextView
                        android:id="@+id/gis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{pokemon.getgetGameIndiceString()}' />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/savetofav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="saveToFavorite"
            android:text="Save to Favorite"
            app:layout_constraintEnd_toEndOf="@id/bottomlayout" />
    </LinearLayout>
    </LinearLayout>

</layout>
